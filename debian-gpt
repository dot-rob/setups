sudo apt install -y --no-install-recommends linux-headers-$(uname -r) gnome-shell gnome-session gdm3
sudo apt install -y --no-install-recommends \
    gnome-calculator gnome-clocks \
    gnome-terminal nautilus gnome-text-editor eog evince \
    gnome-control-center gnome-keyring gnome-disk-utility gnome-shell-extensions gnome-system-monitor gnome-screenshot gnome-themes-extra gnome-tweaks \
    network-manager-gnome \
    pipewire-audio \
    xdg-user-dirs-gtk
sudo apt install -y unzip zip xz-utils p7zip-full
sudo apt install -y build-essential celluloid fonts-cantarell fonts-clear-sans fonts-jetbrains-mono fonts-liberation htop nmap openprinting-ppds putty remmina
echo ""
echo ""
sudo adduser rob dialout
echo ""
echo ""
sleep 10
echo ""
echo ""
sudo install -d -m 0755 /etc/apt/keyrings
wget -q https://packages.mozilla.org/apt/repo-signing-key.gpg -O- | sudo tee /etc/apt/keyrings/packages.mozilla.org.asc > /dev/null
echo "deb [signed-by=/etc/apt/keyrings/packages.mozilla.org.asc] https://packages.mozilla.org/apt mozilla main" | sudo tee -a /etc/apt/sources.list.d/mozilla.list > /dev/null
echo ' Package: * Pin: origin packages.mozilla.org Pin-Priority: 1000 ' | sudo tee /etc/apt/preferences.d/mozilla
sudo apt update -y
sudo apt install firefox -y
echo ""
echo ""
echo "Debian script finished! Please reboot now."
echo ""
echo ""
